<div class="container text-center container-products" style="width: 700px;">
    <div class="list-group" style="background-color: darkorange;">
        <h2 style="color:aliceblue;">Carrito de Compras</h2>
    </div>
    {{#if pedidos}}
    {{#each pedidos}}
    {{#if dataValues.estadopago}}
    {{else}}
    <div class="card card-view-products" style="width:500px ;">
        <div class="card" style="width: 18rem align-content=center; ">
            <div class="card-body">
                <p class="card-text" style="color: orange;">{{dataValues.image}}</p>
                <p class="card-text" style="color: black;">Orden : {{dataValues.nombre}}</p>
                <p class="card-text" style="color: black;" id="price" name="price">Precio : {{dataValues.precio}}</p>
                <p class="card-text" style="color: black;">Descripcion : {{dataValues.descripcion}}</p>
